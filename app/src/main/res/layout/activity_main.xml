<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Angle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/angle_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Angle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/angle_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Angle1" />

    <TextView
        android:id="@+id/Angle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/angle_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Angle2" />

    <Button
        android:id="@+id/showGraphButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showGraphActivity"
        android:text="@string/show_graphs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />


</androidx.constraintlayout.widget.ConstraintLayout>
